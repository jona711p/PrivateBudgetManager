
@{
    ViewBag.Title = "PDF Generator";
}

<h2>PDF Generator</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PDF Generator</h4>
        <hr />
        <div class="form-group">
            @Html.Label("Vælg en Start Dato", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("fromDate", new { htmlAttributes = new { @class = "form-control", type = "date" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Vælg en Slut Dato", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("toDate", new { htmlAttributes = new { @class = "form-control", type = "date" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Generate PDF" class="btn btn-default" />
            </div>
        </div>
    </div>
}
